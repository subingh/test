@model IEnumerable<StripeWebApp.Models.Item>

<div class="text-center border" >
    <h1 class="display-4">Welcome to Our Store<strong><br />Hamro Pasal</strong></h1>
</div>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3" );">
                <div class="item">
                    <form class="d-flex justify-content-center" style="position:relative" asp-action="CreateCheckout" method="post">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <div class="image">
                            <img class="itemImg" name="ImageUrl" src="@item.ImageUrl" style="height:200px; transition: border 0.3 ease;" />
                        </div>
                        <h6 class="itemTitle" name="Name" style="position:absolute; top:115%;">@item.Name</h6>
                        <input type="hidden" name="PriceId" value="@item.PriceId" />
                        <input class="itemBtn btn-dark" type="submit" value="Checkout" style="position:absolute; top:130%;" />
                    </form>
                </div>
            </div>
        }
    </div>
</div>