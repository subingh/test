@model Surabin.Models.Entities.MyClient

<h1>Edit Clients</h1>

        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="ID" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="ClientName" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-label">Contact No.</label>
            <input type="number" class="form-control" asp-for="ContactNo" />
        </div>

        <div class="mt-3">
            <label class="form-label">Tasks</label>
            <input type="text" class="form-control" asp-for="TaskCategories" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="MyClients">Delete</button>
        </div>

      
    



