@model Surabin.Models.AddClientsViewModel

<partial name="_Notification"/>

<h1>MyClients</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="ClientName" />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="form-label">Contact No.</label>
        <input type="number" class="form-control" asp-for="ContactNo" />
    </div>

    <div class="mt-3">
        <label class="form-label">Tasks</label>
        <input type="text" class="form-control" asp-for="TaskCategories" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>