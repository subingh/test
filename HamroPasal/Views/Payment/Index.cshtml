@model IEnumerable<HamroPasal.Models.Item>

<!DOCTYPE html>
<html>
<head>
    <title>Buy cool new product</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-3" );">
                    <div>
                        <form class="d-flex justify-content-center" style="position:relative" asp-action="CreateCheckout" method="post">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <img class="item.Img" name="ImageUrl" src="@item.ImageUrl" style="height:200px;" />
                            <h6 name="Name" style="position:absolute; top:110%;">@item.Name</h6>
                            <input type="hidden" name="PriceId" value="@item.PriceId" />
                            <input class="btn btn-dark" type="submit" value="Checkout" style="position:absolute; top:130%;" />
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>